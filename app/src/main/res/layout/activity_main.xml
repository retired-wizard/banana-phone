<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Pulsing circle around voice button -->
    <View
        android:id="@+id/pulsingCircle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="@drawable/pulse_circle"
        android:visibility="gone"
        android:elevation="2dp" />

    <!-- Speech transcription text -->
    <TextView
        android:id="@+id/speechText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="24dp"
        android:maxWidth="300dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="#CC000000"
        android:padding="12dp"
        android:visibility="gone"
        android:elevation="16dp"
        android:translationZ="16dp" />

    <!-- Floating Action Button for Voice Input -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/voiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:contentDescription="Voice Input"
        app:tint="@android:color/white"
        app:backgroundTint="@color/voice_button_color" />

</FrameLayout>

